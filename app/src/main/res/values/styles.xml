<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.WeatherApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Widget.WeatherApp.EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/white_fading</item>
    </style>
</resources>